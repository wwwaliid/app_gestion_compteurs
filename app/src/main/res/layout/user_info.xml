<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/user_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Informations sur utilisateur"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/nom_text"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Nom : "
        android:paddingLeft="10dp"
        android:layout_below="@+id/user_info_title"/>
    <TextView
        android:id="@+id/email_text"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Email : "
        android:paddingLeft="10dp"
        android:layout_below="@+id/nom_text"/>
    <TextView
        android:id="@+id/role_text"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Role : "
        android:paddingLeft="10dp"
        android:layout_below="@+id/email_text"/>
    <TextView
        android:id="@+id/password_text"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Mot de passe : "
        android:paddingLeft="10dp"
        android:layout_below="@+id/role_text"/>


    <TextView
        android:id="@+id/nom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="TextView"
        android:paddingLeft="10dp"
        android:layout_below="@+id/user_info_title"
        android:layout_toRightOf="@+id/nom_text"/>
    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="TextView"
        android:paddingLeft="10dp"
        android:layout_below="@+id/nom"
        android:layout_toRightOf="@+id/email_text"/>
    <TextView
        android:id="@+id/role"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="TextView"
        android:paddingLeft="10dp"
        android:layout_below="@+id/email"
        android:layout_toRightOf="@+id/role_text"/>
    <TextView
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="TextView"
        android:paddingLeft="10dp"
        android:layout_below="@+id/role"
        android:layout_toRightOf="@+id/password_text"/>

    <Button
        android:id="@+id/supprimer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supprimer"
        android:layout_below="@id/password_text"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>