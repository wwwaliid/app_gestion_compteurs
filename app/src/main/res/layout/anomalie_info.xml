<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/anomalie_info_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Informations sur anomalie"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_margin="50dp"
        android:textStyle="bold"
        android:gravity="center" />
    <TextView
        android:id="@+id/code_text"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:text="Code : "
        android:paddingLeft="10dp"
        android:layout_below="@+id/anomalie_info_title"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/description_text"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:text="Description : "
        android:paddingLeft="10dp"
        android:layout_below="@+id/code_text"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/code"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="TextView"
        android:paddingLeft="10dp"
        android:layout_below="@+id/anomalie_info_title"
        android:layout_toRightOf="@+id/description_text"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="TextView"
        android:paddingLeft="10dp"
        android:layout_below="@+id/code"
        android:layout_toRightOf="@+id/description_text"
        android:textSize="20sp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="2sp"
        android:autoSizeMaxTextSize="20sp"
        android:autoSizeStepGranularity="1sp"/>

    <Button
        android:id="@+id/supprimer_anomalie_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supprimer"
        android:layout_below="@id/description_text"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FF0000"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:drawableLeft="@drawable/ic_baseline_delete_forever_24"
        android:drawableRight="@drawable/ic_baseline_delete_forever_24"
        android:layout_marginTop="20dp"/>

</RelativeLayout>