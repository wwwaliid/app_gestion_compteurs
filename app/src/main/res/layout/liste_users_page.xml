<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/liste_users_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Liste des utilisateurs"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_margin="50dp"
        android:textStyle="bold"
        android:gravity="center" />
    <TextView
        android:id="@+id/nbrUsers_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/liste_users_title"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nbrUsers_text"
        android:id="@+id/table_titles">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Nom"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@color/blue"
            android:layout_weight="1"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="PrÃ©nom"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@color/blue"
            android:layout_weight="1"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Email"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@color/blue"
            android:layout_weight="1"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Password"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@color/blue"
            android:layout_weight="1"
            android:gravity="center"/>
    </LinearLayout>


    <ListView
        android:id="@+id/liste_users_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/table_titles"/>

</RelativeLayout>